<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false);
    <style>
        .btn-info:hover{
            background:#000000;
            color:#ffffff;
            box-shadow:5px 5px 5px #000000;
        }
        .btn-default{
           
           box-shadow: 5px 5px 5px #000000;
        }
        #tabletitle{
            color:red;
        }
        

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ryans Home Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                        @*the action link is written like this ->(Display Name, Action Method, Controller Name)*@
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Create User", "Create", "User")</li>
                        <li>@Html.ActionLink("List of Users", "Index", "User")</li>
                    <li>@Html.ActionLink("List of Pets", "Index", "Pet")</li>
                    <li>@Html.ActionLink("BootStrap", "Index", "BootStrap")</li>
                  
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ryans Application</p>
        </footer>
    </div>

    
</body>
</html>